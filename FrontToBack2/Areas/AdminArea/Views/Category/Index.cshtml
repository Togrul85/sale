@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title " width="100" >Category Table</h4>
                    <a asp-action ="Create" class="btn btn-success"></a>
                   
                       @* Add class <code>.table</code>*@
                   
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Settings</th>
                                  
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                       
                                        <td>
                                            <a asp-action ="detail" asp-controller="category" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="mdi mdi-access-point-network"> </i>
                                                <p>Detail</p>
                                            </a>

                                            <a asp-action ="edit" asp-route-id="@item.Id"class="btn btn-outline-warning">
                                                <i class="mdi mdi-tooltip-edit"> </i>
                                                <p>Edit</p>
                                            </a>



                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete-forever"> </i>
                                                <p>Delete</p>
                                            </a>
                                        </td>
                                    </tr>
                                }
                              
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

